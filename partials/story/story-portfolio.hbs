<article class="portfolio-card relative overflow-hidden mb-8 rounded-sm flex items-center justify-center h-90 has-overlay">
    <a href="{{url}}">
        {{#if feature_image}}
        <img class="image-inset"
            src="{{img_url feature_image size="m"}}"
            srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w"
            data-sizes="auto"
            alt="{{name}}"
        />
        {{/if}}

        <div class="portfolio-card-body relative text-white z-4 text-center px-4 py-16 overlay-toggle">
            <h2 class="text-xl capitalize font-medium mb-4">{{title}}</h2>
            <div class="text-sm tracking-widest text-primary font-medium">{{t "View Project"}}</div>
        </div>

        <div class="portfolio-card-bg absolute inset-0 z-2 bg-black bg-opacity-80 overlay-toggle"></div>
    </a>
</article>